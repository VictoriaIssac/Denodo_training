CREATE OR REPLACE VIEW dv_community FOLDER = '/01 - data sources' AS SELECT employees.employee_id AS employee_id, employees.first_name AS first_name, employees.last_name AS last_name, employees.email AS email, employees.phone_number AS phone_number, employees.hire_date AS hire_date, employees.salary AS salary, employees.commission_pct AS commission_pct, bv_hr_departments.department_id AS department_id, bv_hr_departments.department_name AS department_name, bv_hr_departments.manager_id AS manager_id, bv_hr_departments.location_id AS location_id, bv_hr_jobs.job_id AS job_id, bv_hr_jobs.job_title AS job_title, bv_hr_jobs.min_salary AS min_salary, bv_hr_jobs.max_salary AS max_salary, "JOB_HISTORY"."START_DATE" AS "START_DATE", "JOB_HISTORY"."END_DATE" AS "END_DATE" FROM ((employees AS employees INNER JOIN bv_hr_departments AS bv_hr_departments ON employees.employee_id = bv_hr_departments.manager_id ) INNER JOIN bv_hr_jobs AS bv_hr_jobs ON employees.job_id = bv_hr_jobs.job_id ) INNER JOIN "JOB_HISTORY" AS "JOB_HISTORY" ON (bv_hr_departments.department_id = "JOB_HISTORY"."DEPARTMENT_ID" AND "JOB_HISTORY"."JOB_ID" = bv_hr_jobs.job_id)  WHERE bv_hr_departments.department_id = 11;

ALTER VIEW dv_community
 LAYOUT (employees = [20, 30, 200, 225], bv_hr_departments = [330, 30, 200, 106], bv_hr_jobs = [310, 330, 200, 106], "JOB_HISTORY" = [610, 0, 200, 126]);

